conky.config = {
			out_to_x = false,
      background = false,
			cpu_avg_samples = 2,
			net_avg_samples = 2,
			no_buffers = true,
			out_to_console = true,
			out_to_stderr = false,
			extra_newline = false,
			update_interval = 1.0,
			uppercase = false,
			use_spacer = left,
			times_in_seconds = true,
}

conky.text =
[[^fg(\#195466)${time %a %d %b %R} \
       \
^fg(\#195466)CPU:^fg(\#33859e)$cpu% \
^fg(\#195466)RAM:^fg(\#33859e)${if_match ${to_bytes $memeasyfree} < 536870912}^fg(\#c23127)${endif}$memperc% \
^fg(\#195466)↓^fg(\#33859e)${downspeedf wlp1s0} \
^fg(\#195466)↑^fg(\#33859e)${upspeedf wlp1s0} \
${if_match "${exec pactl list sinks | awk '/^\tMute:/ {print $2;exit}'}" == "no"}^fg(\#195466)♪^fg(\#33859e)${exec pactl list sinks | awk '/^\tVolume:/ {print $5;exit}'}${endif} \
${if_match ${battery_percent BAT}!=0}^fg(\#195466)⚡^fg(\#33859e)${if_match ${battery_time BAT}<=600}^fg(\#c23127)${endif}${battery_short BAT}: ${format_time ${battery_time BAT} "(\dd )(\hh )\mmin"} ${endif}\
]]
